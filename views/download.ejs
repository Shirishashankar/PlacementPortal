<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Placement Portal | Download</title>

    <!-- linking css stylesheets -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.png" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/download_csv.css" />
    <!-- linking javascripts for flash messages -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.4.0/axios.min.js"
      integrity="sha512-uMtXmF28A2Ab/JJO2t/vYhlaa/3ahUOgj1Zf27M5rOo8/+fcTUVH0/E0ll68njmjrLqOBjXM3V9NiPFL5ywWPQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
  </head>

  <body>
    <!-- header  -->
    <header class="navbar">
      <div class="nav-title">
        <!-- Logo and Title -->
        <img src="/images/logo.png" alt="Logo" class="logo" />
        <h1>Placement Portal</h1>
      </div>
      <ul class="nav-links" id="navbarLinks">
        <li><a href="/">Home</a></li>
        <li><a href="/students/">Students</a></li>
        <li><a href="/interviews/">Interviews</a></li>
        <li><a href="/jobs/fetch-jobs">Jobs</a></li>
        <li><a href="/download-csv/">Download CSV</a></li>
        <li class="mobile-only"><a href="/profile">Profile</a></li>
        <li class="mobile-only"><a href="/employees/sign-out">Sign Out</a></li>
      </ul>
      <div class="user-profile">
        <!-- Profile Picture and Sign Out -->
        <a href="/profile"
          ><img
            src="/images/profile.jpg"
            alt="Profile Picture"
            class="profile-pic"
        /></a>
        <button class="sign-out-btn">
          <a href="/employees/sign-out">Sign Out</a>
        </button>
      </div>
      <!-- Hamburger Menu Icon -->
      <div class="hamburger" id="hamburgerIcon">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </div>
    </header>

    <!-- main container -->
    <main>
      <div class="button-container">
        <button class="download-button" onclick="fetchDataToDownload()">
          Download CSV
        </button>
      </div>
    </main>

    <!-- footer  -->

    <!-- linking external javascripts -->
    <script>

            const fetchDataToDownload = () => {
                axios
                  .get(`<%=BASE_URL%>/students/download-csv`)
                  .then(({ data }) => {
                    console.log(data);
                    window.open(data.downloadURL, "blank");
                  })
                  .catch((error) => {
                    console.log(error);
                    alert("Error Happened");
                  });
              };


                  <% if(flash.success && flash.success.length > 0){%>
                              new Noty({
                              theme:'nest',
                              text: '<h3><%= flash.success%></h3>',
                              type:'success',
                              layout:'topRight',
                              timeout:3000
                          }).show();
                          <% } %>

                          <% if(flash.error && flash.error.length > 0){%>
                            new Noty({
                              theme:'nest',
                              text: '<%= flash.error%>',
                              type:'error',
                              layout:'topRight',
                              timeout:3000
                            }).show();
                          <% } %>
                          // Hamburger menu toggle
      const hamburgerIcon = document.getElementById("hamburgerIcon");
      const navbarLinks = document.getElementById("navbarLinks");

      hamburgerIcon.addEventListener("click", () => {
        navbarLinks.classList.toggle("active");
        hamburgerIcon.classList.toggle("active");
      });
    </script>
  </body>
</html>
